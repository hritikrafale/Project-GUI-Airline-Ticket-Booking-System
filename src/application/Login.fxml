<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
   <children>
      <Label alignment="CENTER" layoutX="100.0" layoutY="35.0" prefHeight="30.0" prefWidth="100.0" text="Login Page" textAlignment="CENTER" AnchorPane.bottomAnchor="335.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Label>
      <TextField fx:id="username" layoutX="83.0" layoutY="91.0" onAction="#loginChange" prefHeight="35.0" promptText="Username" AnchorPane.leftAnchor="65.0" AnchorPane.rightAnchor="65.0" />
      <Button fx:id="login" layoutX="124.0" layoutY="230.0" mnemonicParsing="false" onAction="#loginChange" text="Login" AnchorPane.leftAnchor="124.0" AnchorPane.rightAnchor="124.0">
      	<font>
      		<Font name="Calibri Bold" size="14.0" />	
      	</font>
      </Button>
      <Label alignment="CENTER" layoutX="100.0" layoutY="272.0" prefHeight="25.0" prefWidth="100.0" text="New User?" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
         <font>
            <Font name="Calibri Bold" size="14.0" />
         </font>
      </Label>
      <Button fx:id="signup" layoutX="124.0" layoutY="311.0" mnemonicParsing="false" onAction="#signupChange" text="SignUp" AnchorPane.leftAnchor="120.0" AnchorPane.rightAnchor="120.0">
